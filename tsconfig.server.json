/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/server",
    "target": "es2016",
    "types": [
      "node",
      "google.analytics",
      "facebook-js-sdk",
      "gapi",
      "gapi.auth2"
    ]
  },
  "files": [
    "src/main.server.ts",
    "server.ts"
  ],
  "exclude": [
    "**/*.browser.*.ts",
    "**/*.browser.ts",
    "**/browser/**",
    "test.ts",
    "polyfills.ts",
    "**/*.spec.ts"
  ],
  "angularCompilerOptions": {
    "entryModule": "./src/app/app.server.module#AppServerModule"
  }
}
